<!doctype html>
<html>
<div align="center">

    <% if @room == [] %>
    <h2> You currently do not have any rooms added </h2>
    <% else %>

    <head>
      <h1>Hear are your current rooms and colors:</h1>
      <br>
    </head>


    <style>
    table, th, td {border: 1px solid black;}
    </style>
    <body>
    <table class="table" width="500" cellpadding="20" cellspacing="0">
    <thead>
      <tr>
        <th scope="col">Room</th>
        <th scope="col">Color</th>
        <th scope="col">Brand</th>
        <th scope="col">Sheen</th>
        <th scope="col">Delete</th>
        <th scope="col">Update</th>
      </tr>
    </thead>
    <tbody>
      <% @room.each do |room| %>
      <tr>
        <td align="center"><%= room.name %></td>
        <td align="center"><%= room.color %></td>
        <td align="center"><%= room.brand %></td>
        <td align="center"><%= room.sheen %></td>
        <td align="center"><form action="/rooms/<%= room.id %>" method="post">
  	      <input type="hidden" name="_method" value="delete">
  	      <input type="submit" value="Delete">
        </form></td>
        <td align="center"><form action="/rooms/<%= room.id %>/edit" method="get">

          <input type="submit" value="Edit">
        </form></td>
      </tr>
      <% end %>
      <% end %>
    </tbody>
    </table>

    <br>
    <p> To add more rooms, click <a href="/rooms/new"> Here </a>
  </body>
</div>
</html>
